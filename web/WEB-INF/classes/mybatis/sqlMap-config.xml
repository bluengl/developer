<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--    输出SQL到日志-->
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--    使用自动扫描器时，mapper.xml文件如果和mapper.java接口在一个目录则此处不用定义mappers-->
    <mappers>
        <mapper resource="mybatis/mapper/ContractMapper.xml"/>
        <mapper resource="mybatis/mapper/ProjectMapper.xml"/>
        <mapper resource="mybatis/mapper/PersonMapper.xml"/>
        <mapper resource="mybatis/mapper/SystemMapper.xml"/>
    </mappers>

</configuration>
